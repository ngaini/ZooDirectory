<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.ngaini.zoodirectory.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"


        android:src="@drawable/polar_bear"
        android:id="@+id/detailActivity_animal_image"
        android:maxHeight="150dp"
        android:background="#c9000000"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:id="@+id/detailActivity_animal_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="45dp"
                android:textStyle="bold"
                android:textColor="#c9000000"
                android:text="Hello"
                android:gravity="left"
                android:layout_weight="0.3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.7"
                android:id="@+id/detailActivity_animal_description"/>


            </LinearLayout>




</LinearLayout>
